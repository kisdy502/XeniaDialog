<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/size_72"
    android:layout_marginBottom="@dimen/size_2"
    android:layout_marginTop="@dimen/size_2"
    android:background="@drawable/file_bg_selector"
    android:clickable="true"
    android:focusable="true">

    <CheckBox
        android:id="@+id/cb_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginRight="@dimen/size_48" />


    <TextView
        android:id="@+id/tv_file_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_file_name"
        android:layout_marginLeft="@dimen/size_20"
        android:layout_marginTop="@dimen/size_18"
        android:layout_marginBottom="@dimen/size_14"
        android:maxLines="1"
        android:textColor="#7C7C7C"
        android:textSize="@dimen/size_24" />

    <TextView
        android:id="@+id/tv_file_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_18"
        android:layout_marginTop="@dimen/size_12"
        android:layout_toRightOf="@+id/tv_file_type"
        android:maxLines="1"
        android:textColor="#7C7C7C"
        android:textSize="@dimen/size_27" />


    <TextView
        android:id="@+id/tv_file_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_12"
        android:layout_marginTop="@dimen/size_12"
        android:layout_toRightOf="@id/tv_file_name"
        android:maxLines="1"
        android:text="D"
        android:textColor="#07F707"
        android:textSize="@dimen/size_24" />


    <TextView
        android:id="@+id/tv_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_14"
        android:layout_marginTop="@dimen/size_10"
        android:maxLines="1"
        android:text="SD卡"
        android:textColor="#22227C"
        android:textSize="@dimen/size_30" />


</RelativeLayout>