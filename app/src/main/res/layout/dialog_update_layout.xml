<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="@dimen/size_1024"
        android:layout_height="@dimen/size_632"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_channel_bg">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_108"
            android:gravity="center"
            android:text="应用升级"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/size_36" />

        <TextView
            android:id="@+id/tv_update_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="@dimen/size_48"
            android:layout_marginTop="@dimen/size_24"
            android:layout_marginRight="@dimen/size_48"
            android:lineSpacingMultiplier="1.5"
            android:text="1.更新了影视记录 \n2.儿童区内容模板变更\n3.应用运行速度优化
            \n4.用户积分模块上线\n5.用户免费兑换观影"
            android:textSize="@dimen/size_33" />

        <ProgressBar
            android:id="@+id/download_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_2"
            android:layout_above="@id/rv_button_layout"
            android:background="#FFFFFF"
            android:max="100" />

        <LinearLayout
            android:id="@+id/rv_button_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_108"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/update_now"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/normal_bg_selector"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:text="立即更新"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/size_30" />

            <View
                android:layout_width="@dimen/size_1"
                android:layout_height="match_parent"
                android:background="#CCCCCC" />

            <TextView
                android:id="@+id/cancel_update"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/normal_bg_selector"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:text="取消"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/size_30" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>